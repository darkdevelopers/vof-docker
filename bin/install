#!/bin/bash
echo "Start the install scripts"
echo "Enter your Bitbucket Username"
read bbUsername
rm -rf html
git clone https://$bbUsername@bitbucket.org/vofvapeshop/shop.vof.laravel.git html
cd html
docker-compose exec php composer install
docker-compose exec php php artisan vendor:publish --all
docker-compose exec php php artisan migrate
docker-compose exec php php artisan aimeos:setup
docker-compose exec php php artisan aimeos:cache
