#!/bin/bash
echo "Start the install scripts"
echo "Enter your Bitbucket Username"
read bbUsername
rm -rf html
git clone https://$bbUsername@bitbucket.org/vofvapeshop/shop.vof.laravel.git html
cd html
composer install
composer update
php artisan vendor:publish --all
php artisan migrate
php artisan aimeos:setup
php artisan aimeos:cache
